{{ define "ListUnits" }}
  {{ template "Header" }}
    {{ template "Menu"  }}
    <h2> Units </h2>
    <table border="1">
      <thead>
      <tr>
        <td>ID</td>
        <td>Name</td>
        <td>View</td>
        <td>Edit</td>
        <td>Delete</td>
      </tr>
       </thead>
       <tbody>
    {{ range . }}
      <tr>
        <td> {{ .Id }} </td>
        <td> {{ .Name }} </td>
        <td><a href="/showUnit?id={{ .Id }}">View</a></td>
        <td><a href="/editUnit?id={{ .Id }}">Edit</a></td>
        <td><a href="/deleteUnit?id={{ .Id }}">Delete</a><td>
      </tr>
    {{ end }}
       </tbody>
    </table>
  {{ template "Footer" }}
{{ end }}